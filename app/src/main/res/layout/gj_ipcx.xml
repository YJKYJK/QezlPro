<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:padding="5dp"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textSize="15dp"

        android:layout_marginTop="10dp"
        android:id="@+id/ipcx_ipdz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:textColor="#00ff80"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="网站IP/IP地址查询"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/ipcx_dz"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:hint="输入IP地址或者网址"/>
        <Button
            android:onClick="ipcx_dzcx"
            android:textSize="18sp"
            android:textColor="#00ffea"
            android:text="开始查询"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"/>


    </LinearLayout>

    <TextView
        android:textColor="#00ff80"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="网站备案查询"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/ipcx_wz"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:hint="输入网站"/>
        <Button
            android:onClick="ipcx_bacx"
            android:textSize="18sp"
            android:textColor="#00ffea"
            android:text="开始查询"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"/>


    </LinearLayout>


</LinearLayout>