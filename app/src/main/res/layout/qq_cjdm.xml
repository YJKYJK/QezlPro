<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:textColor="#4fe3e0"
        android:textSize="20sp"
        android:text="打赏代码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:background="@drawable/edit"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cjdm_qs"
        android:hint="输入金额 如：666"/>
    <CheckBox
        android:checked="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="默认金额"
        android:id="@+id/cjdm_mrqs"/>
    <Button
        android:background="@drawable/button"

        android:textSize="16sp"
        android:textColor="#84ffc8"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 生成打赏代码 "
        android:id="@+id/cjdm_sc"/>
    </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:textColor="#4fe3e0"
                android:textSize="20sp"
                android:text="其他打赏代码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:background="@drawable/edit"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cjdm_nr"
                android:hint="输入物品 如：冰淇淋"/>
            <CheckBox
                android:checked="true"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认物品"
                android:id="@+id/cjdm_mrnr"/>
            <Button
                android:background="@drawable/button"

                android:textSize="16sp"
                android:textColor="#84ffc8"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 生成打赏代码 "
                android:id="@+id/cjdm_sc2"/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:background="@drawable/edit"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cjdm_cjdmnr"
                android:hint="内容为右图黑字部分"/>

            <CheckBox
                android:checked="true"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认内容"
                android:id="@+id/cjdm_mrnr2"/>

            <Button
                android:background="@drawable/button"

                android:textSize="16sp"
                android:textColor="#84ffc8"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 生成超级代码 "
                android:id="@+id/cjdm_sc3"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="right"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="效果图"/>

            <ImageView
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:src="@mipmap/cjdm_yt"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>