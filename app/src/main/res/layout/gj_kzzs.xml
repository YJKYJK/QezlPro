<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal">

	<ListView
		android:background="@drawable/qt"
		android:layout_height="match_parent"
		android:layout_width="0dp"
		android:layout_weight="1.0"
		android:id="@+id/kzzs_lb"/>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_weight="1.0"
		android:gravity="center"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="输入对方昵称"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#00fff7"
			android:textSize="18sp" />

		<EditText
			android:id="@+id/kzzs_mz"

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/edit"
			android:ems="10"
			android:hint="如:@大名" />

		<TextView
			android:id="@+id/kzzs_sd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp"
			android:text="速度: 2 秒"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#00fff2"
			android:textSize="18sp" />

		<SeekBar
			android:id="@+id/kzzs_jd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:max="10"
			android:progress="2" />

		<TextView
			android:id="@+id/kzzs_ct"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp"
			android:text="选择词库"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#00fbef" />


		<TextView
			android:id="@+id/kzzs_kzjd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp"
			android:text="完成进度"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#f20b1e" />

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:background="@drawable/button"
			android:onClick="kzzs_ks"
			android:text="开始"
			android:textColor="#0d1be6"
			android:textSize="20sp" />

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="@drawable/button"
			android:onClick="kzzs_tz"
			android:text="停止"
			android:textColor="#0d1be6"
			android:textSize="20sp" />

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="@drawable/button"
			android:onClick="kzzs_zzck"
			android:text="制作词库"
			android:textColor="#0d1be6"
			android:textSize="20sp" />

	</LinearLayout>

</LinearLayout>

